---
import '../styles/global.css';
import ReadingProgress from '../components/ReadingProgress.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Steak Labs - The science of perfect steak' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&family=JetBrains+Mono&display=swap" rel="stylesheet" />
    <title>{title} | Steak Labs</title>
  </head>
  <body class="min-h-screen">
    <ReadingProgress />

    <header class="border-b-3 border-charcoal bg-sand">
      <nav class="max-w-4xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="text-2xl font-black text-charcoal hover:text-rust transition-colors">
          STEAK LABS
        </a>
        <div class="flex gap-6">
          <a href="/recipes" class="font-bold hover:text-rust transition-colors">Recipes</a>
          <a href="/science" class="font-bold hover:text-rust transition-colors">Science</a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="border-t-3 border-charcoal bg-sand mt-16">
      <div class="max-w-4xl mx-auto px-6 py-8 text-center">
        <p class="font-mono text-sm text-ink/60">Steak Labs â€” Where science meets sizzle</p>
      </div>
    </footer>
  </body>
</html>
