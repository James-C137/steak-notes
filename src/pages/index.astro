---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';
import Tags from '../components/Tags.tsx';

const recipes = await getCollection('recipes');
---

<Base title="Home">
  <section class="bg-ochre text-white border-b-3 border-charcoal">
    <div class="max-w-4xl mx-auto px-6 py-24 text-center">
      <h1 class="text-6xl font-black mb-6 text-white">STEAK NOTES</h1>
      <p class="text-xl max-w-2xl mx-auto opacity-90">
        James' personal steak notes. Includes recipes and experiments from his quest to cook better steak.
      </p>
    </div>
  </section>

  <section class="max-w-4xl mx-auto px-6 py-16">
    <h2 class="text-3xl font-black mb-8">Latest Recipes</h2>

    <div class="grid gap-6">
      {recipes.map((recipe) => (
        <a href={`/recipes/${recipe.id}`} class="brutal-card bg-parchment p-6 block">
          <div class="flex justify-between items-start">
            <div>
              <h3 class="text-xl font-bold mb-2">{recipe.data.title}</h3>
              <p class="text-ink/70 mb-4">{recipe.data.description}</p>
              {recipe.data.tags && <Tags tags={recipe.data.tags} />}
            </div>
            <span class="text-ochre font-black text-2xl">â†’</span>
          </div>
        </a>
      ))}
    </div>
  </section>
</Base>
