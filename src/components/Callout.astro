---
import Card from './Card.astro';

interface Props {
  type?: 'info' | 'warning' | 'tip';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const styles = {
  info: { background: 'bg-white', borderColor: 'border-charcoal' },
  warning: { background: 'bg-parchment', borderColor: 'border-ochre' },
  tip: { background: 'bg-white', borderColor: 'border-charcoal' },
};
---

<Card
  as="aside"
  background={styles[type].background}
  borderColor={styles[type].borderColor}
  margin="my-8"
>
  {title && <p class="font-black text-lg mb-2">{title}</p>}
  <div class="text-sm">
    <slot />
  </div>
</Card>
