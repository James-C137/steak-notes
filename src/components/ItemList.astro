---
import { CookingPot, ClipboardCheck } from 'lucide-astro';

interface Props {
  title: string;
  items: string[];
  icon: 'cooking-pot' | 'clipboard';
  variant?: 'ochre' | 'sage' | 'terracotta' | 'parchment';
}

const { title, items, icon, variant = 'ochre' } = Astro.props;

const variantStyles = {
  ochre: { bg: 'bg-ochre/25', accent: 'bg-ochre' },
  sage: { bg: 'bg-sage/25', accent: 'bg-forest' },
  terracotta: { bg: 'bg-terracotta/20', accent: 'bg-brick' },
  parchment: { bg: 'bg-parchment', accent: 'bg-ochre' },
};

const icons = {
  'cooking-pot': CookingPot,
  'clipboard': ClipboardCheck,
};

const styles = variantStyles[variant];
const Icon = icons[icon];
---

<section class="my-8">
  <div class={`item-list-container ${styles.bg} p-6`}>
    <h3 class="font-black text-lg mt-0 mb-4 flex items-center gap-3">
      <span class={`inline-flex w-8 h-8 ${styles.accent} text-cream items-center justify-center rounded`}>
        <Icon size={16} />
      </span>
      {title}
    </h3>
    <ul class="item-list">
      {items.map((item) => (
        <li class="flex items-center gap-3">
          <span class="w-8 flex-shrink-0 flex justify-center">
            <span class={`w-3 h-3 ${styles.accent} rounded-sm`}></span>
          </span>
          <span class="font-medium">{item}</span>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .item-list-container {
    border: 3px solid var(--color-charcoal);
    border-radius: 0.5rem;
    box-shadow: var(--shadow-brutal);
    transition: all 150ms;
  }
  .item-list-container:hover {
    box-shadow: var(--shadow-brutal-sm);
    transform: translate(2px, 2px);
  }

  .item-list {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }
  .item-list > li {
    padding-left: 0;
    margin-bottom: 0.5rem;
  }
  .item-list > li::before {
    display: none;
  }
</style>
