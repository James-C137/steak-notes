---
interface Props {
  items: string[];
}

const { items } = Astro.props;
---

<section class="my-8">
  <div class="brutal-border bg-coral/20 p-6">
    <h3 class="font-black text-lg mb-4 flex items-center gap-2">
      <span class="inline-flex w-8 h-8 bg-rust text-cream items-center justify-center rounded">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
        </svg>
      </span>
      Ingredients
    </h3>
    <ul class="space-y-2">
      {items.map((item) => (
        <li class="flex items-center gap-3">
          <span class="w-3 h-3 bg-rust rounded-sm flex-shrink-0"></span>
          <span class="font-medium">{item}</span>
        </li>
      ))}
    </ul>
  </div>
</section>
