---
interface Props {
  background?: string;
  borderColor?: string;
  as?: 'div' | 'section' | 'aside' | 'article' | 'a';
  padding?: string;
  margin?: string;
  class?: string;
  [key: string]: any;
}

const {
  background = '',
  borderColor = 'border-charcoal',
  as: Element = 'div',
  padding = 'p-6',
  margin = '',
  class: className = '',
  ...rest
} = Astro.props;

const classes = [
  'card',
  borderColor,
  background,
  padding,
  margin,
  className,
].filter(Boolean).join(' ');
---

<Element class={classes} {...rest}>
  <slot />
</Element>

<style>
  .card {
    border: 3px solid var(--color-charcoal);
    border-radius: 0.5rem;
    box-shadow: var(--shadow-brutal);
    transition: all 150ms;
  }
  .card:hover {
    box-shadow: var(--shadow-brutal-sm);
    transform: translate(2px, 2px);
  }
</style>
