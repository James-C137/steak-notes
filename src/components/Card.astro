---
type ThemeColor = 'charcoal' | 'ochre' | 'terracotta' | 'sage' | 'clay' | 'forest' | 'brick' | 'coral' | 'ink' | 'sky' | 'navy';

interface Props {
  background?: string;
  borderColor?: ThemeColor;
  as?: 'div' | 'section' | 'aside' | 'article' | 'a';
  padding?: string;
  margin?: string;
  class?: string;
  [key: string]: any;
}

const {
  background = '',
  borderColor = 'charcoal',
  as: Element = 'div',
  padding = 'p-6',
  margin = '',
  class: className = '',
  ...rest
} = Astro.props;

const classes = [
  'card',
  background,
  padding,
  margin,
  className,
].filter(Boolean).join(' ');

const cardStyle = `--card-color: var(--color-${borderColor})`;
---

<Element class={classes} style={cardStyle} {...rest}>
  <slot />
</Element>

<style>
  .card {
    border: 3px solid var(--card-color);
    border-radius: 0.5rem;
    box-shadow: 4px 4px 0px 0px var(--card-color);
    transition: all 150ms;
  }
  .card:hover {
    box-shadow: 2px 2px 0px 0px var(--card-color);
    transform: translate(2px, 2px);
  }
</style>
